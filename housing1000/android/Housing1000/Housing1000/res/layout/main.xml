<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingTop="5dip"
    android:gravity="center">


    <ImageView    android:id="@+id/housing_logo"
                  android:layout_width="fill_parent"
                  android:layout_height="103dip"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="10dip"
                  android:src="@drawable/housing1000logo" />


    <TextView   android:id="@+id/usernameLabel"
                android:paddingTop="10dip"
                android:layout_height="40dip"
                android:layout_width="fill_parent"
                android:layout_below="@id/housing_logo"
                android:gravity="center_horizontal"
                android:text="User Name:"/>


    <EditText
            android:id="@+id/emailLoginTextBox"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:layout_below="@+id/usernameLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:inputType="textPassword" >
            <requestFocus />
    </EditText>


    <TextView   android:id="@+id/passwordLabel"
                android:paddingTop="10dip"
                android:layout_height="40dip"
                android:layout_width="fill_parent"
                android:layout_below="@id/emailLoginTextBox"
                android:gravity="center_horizontal"
                android:text="Password:"/>


    <EditText   android:id="@+id/passwordLoginTextBox"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_below="@+id/passwordLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword" />

    <LinearLayout
                 android:layout_below="@+id/passwordLoginTextBox"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingTop="10dip"
        android:layout_centerHorizontal="true">



        <Button
                android:id="@+id/clearButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/loginButton"
                android:layout_alignBottom="@+id/loginButton"
                android:text="Clear"
                style="@style/ButtonText"
                android:background="@drawable/btn_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp" />
        <Button
                android:id="@+id/loginButton"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
            android:text="Login"
                android:background="@drawable/btn_yellow"
                style="@style/ButtonText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>